<Page loaded="pageLoaded">
    <!--
    The ActionBar is the NativeScript common abstraction over the Android ActionBar and iOS NavigationBar.
    http://docs.nativescript.org/ui/action-bar
    -->
      <ActionBar id="actionBar" title="Point Wallet" class="action-bar" ></ActionBar> 
    <StackLayout style="margin:5%;">
        <Label text="Information " class="h2 text-center" textWrap="true"/>
        <Button tap="claimYourPointsClicked" text="Claim your Points"></Button>
        <Button style="margin:5%;" id="back" text="Back" tap="backClicked"/>
    </StackLayout>
</Page>
